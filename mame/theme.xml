<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>fdd403</color>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>MAME stands for Multiple Arcade Machine Emulator. MAME can emulate thousands of games that otherwise would have been lost in the ash-heaps of history.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot3.jpg</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.300 0.300</maxSize>
		</image>
	</view>

	<view name="basic, detailed">
		<image name="border" extra="true">
			<path>./art/systembg_mame.png</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
	</view>
	
</theme>