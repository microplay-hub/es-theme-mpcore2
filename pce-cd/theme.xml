<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>f79226</color>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>The TurboGrafx-16 Entertainment SuperSystem, known in Japan and France as the PC Engine, is a home video game console jointly developed by Hudson Soft and NEC Home Electronics</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot2.jpg</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.300 0.300</maxSize>
		</image>
	</view>

	<view name="basic, detailed">
		<image name="border" extra="true">
			<path>./../pcengine/art/systembg_pcengine.png</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
	</view>
	
</theme>