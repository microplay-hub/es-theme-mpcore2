<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>8a2be2</color>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>The Amstrad CPC (short for Colour Personal Computer) is a series of 8-bit home computers produced by Amstrad between 1984 and 1990</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot2.jpg</path>
		</image>
		<image name="logo">
			<path>./system.png</path>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.300 0.300</maxSize>
			<color>8a2be2</color>
		</image>
	</view>

	<view name="basic, detailed">
		<image name="border" extra="true">
			<path>./../art/systembg_console_univ.png</path>
		</image>
		<image name="logo">
			<path>./system.png</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.150 0.150</maxSize>
			<color>8a2be2</color>
		</image>
	</view>
	
</theme>