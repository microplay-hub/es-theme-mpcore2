<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>7AFFD0</color>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>The Radio Shack TRS-80 Color Computer (nicknamed CoCo) is a line of home computers based on the Motorola 6809 processor. The Color Computer was launched in 1980, and lasted through three generations of hardware until being discontinued in 1991.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot2.jpg</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.300 0.300</maxSize>
		</image>
	</view>

	<view name="basic, detailed">
		<image name="border" extra="true">
			<path>./../art/systembg_console_univ.png</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
	</view>
	
</theme>