<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>BBA3FF</color>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>DAPHNE is an arcade emulator that emulates a variety of laserdisc arcade games with the intent of preserving these games and making the play experience as faithful to the originals as possible. The developer calls DAPHNE the First Ever Multiple Arcade Laserdisc Emulator (FEMALE), and its name is a reference to Princess Daphne, the heroine of Dragon's Lair.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot2.jpg</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.300 0.300</maxSize>
		</image>
	</view>

	<view name="basic, detailed">
		<image name="border" extra="true">
			<path>./art/systembg_daphne.png</path>
		</image>
		<image name="logo">
			<path>./art/system.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
		<image name="console" extra="true">
			<path>./art/controller.svg</path>
			<maxSize>0.150 0.150</maxSize>
		</image>
	</view>
	
</theme>